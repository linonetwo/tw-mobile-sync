title: $:/plugins/linonetwo/tw-mobile-sync/ui/style.css
tags: $:/tags/Stylesheet
type: text/vnd.tiddlywiki

<$importvariables filter="[[$:/themes/tiddlywiki/vanilla/base]]">

.tw-mobile-sync-server-list {
  padding-left: 0;
  overflow: auto;
  overflow: overlay;
}

.tw-mobile-sync-sync-button {
  width: 100%; height: 100px; display: flex; flex-direction: column; justify-content: center; align-items: center;
  max-width: 300px;
  min-width: 175px;
}
.tw-mobile-sync-copy-button {
  height: 100%;
  display: flex; flex-direction: column; justify-content: center; align-items: center;
  margin-left: 10px !important;
}

.tw-mobile-sync-sync-reveal {
  margin-left: 20px;
}

.tw-mobile-sync-new-server-field-fields-container-outer textarea,
.tw-mobile-sync-new-server-field-fields-container-outer input {
  width: 100%;
}
.tw-mobile-sync-new-server-field-fields-container-outer {
  display: flex; flex-direction: column;
}
.tw-mobile-sync-new-server-field-fields-container {
  display: flex; flex-direction: row; justify-content: center; align-items: center;
}
.tw-mobile-sync-new-server-field-fields-buttons {
  display: flex; flex-direction: column; justify-content: center; align-items: center;
}
@media (max-width: 535px) {
  .tw-mobile-sync-new-server-field-fields-container {
    flex-direction: column;
  }
  .tw-mobile-sync-new-server-field-fields-buttons {
    width: 100%;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 10px;
  }
}

.tw-mobile-sync-existed-server-field-fields-container {
  display: flex; flex-direction: row;
}
.tw-mobile-sync-existed-server-field-fields-buttons {
  display: flex; flex-direction: row; justify-content: space-between;
}


.tw-mobile-sync-sidebar-fieldset {
  display: flex; flex-direction: column; justify-content: center; align-items: center;
  width: 100%;
}

.tw-mobile-sync-sidebar-desktop-server-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}
.tw-mobile-sync-sidebar-desktop-server-item h3, .tw-mobile-sync-sidebar-desktop-server-item h5 {
  margin: 0;
}
.tw-mobile-sync-sidebar-desktop-server-item h5 {
  font-weight: 700;
}
.tw-mobile-sync-sidebar-desktop-server-item p:last-child {
  margin-bottom: 15px;
}

.tw-mobile-sync-server-list-item {
  display: flex; flex-direction: row; align-items: center;
  justify-content: space-between;
}

.tw-mobile-sync-sidebar-qrcode {
  width: auto;
  height: auto;
}
.tw-mobile-sync-sidebar-qrcode img {
  width: {{$:/themes/tiddlywiki/vanilla/metrics/sidebarwidth}};
  height: {{$:/themes/tiddlywiki/vanilla/metrics/sidebarwidth}};
}

</$importvariables>