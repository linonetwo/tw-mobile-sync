.tw-mobile-sync-sidebar-mobile-content, .tw-mobile-sync-sidebar-desktop-content {
  width: 100%;
  display: flex;
}

@media (min-width: <<sidebarbreakpoint>>) {
  .tw-mobile-sync-sidebar-mobile-content {
    display: none;
  }
}

