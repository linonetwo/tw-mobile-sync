.tw-html-nodejs-sync-sidebar-mobile-content, .tw-html-nodejs-sync-sidebar-desktop-content {
  width: 100%;
display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

@media (min-width: <<sidebarbreakpoint>>) {
  .tw-html-nodejs-sync-sidebar-mobile-content {
    display: none;
  }
}

@media (max-width: <<sidebarbreakpoint>>) {
  .tw-html-nodejs-sync-sidebar-desktop-content {
    display: none;
  }
}

